  "compilerOptions": {
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "importHelpers": true,
    "sourceMap": true,
    "strict": false,
    "skipLibCheck": true,
    "removeComments": true,
    "target": "ES2015",
    "types": ["chai", "mocha", "node", "sinon"],
    "typeRoots": ["node_modules/@types"]
  },
  "include": ["src"]
}
